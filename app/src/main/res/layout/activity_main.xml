<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.lifeistech.com.count.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0回ボタンが押されました"
        android:id="@+id/text1"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD1"
        android:id="@+id/add1"
        android:onClick="plus1"
        android:layout_below="@+id/text1"
        android:layout_alignLeft="@+id/add2"
        android:layout_alignStart="@+id/add2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MINUS1"
        android:id="@+id/minus1"
        android:layout_above="@+id/text2"
        android:layout_toRightOf="@+id/text1"
        android:layout_toEndOf="@+id/text1"
        android:onClick="subtract1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD2"
        android:id="@+id/add2"
        android:layout_below="@+id/text2"
        android:layout_toLeftOf="@+id/text2"
        android:layout_toStartOf="@+id/text2"
        android:onClick="plus2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0回ボタンが押されました"
        android:id="@+id/text2"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/add1"
        android:layout_toLeftOf="@+id/minus2"
        android:layout_toStartOf="@+id/minus2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MINUS2"
        android:id="@+id/minus2"
        android:layout_alignTop="@+id/add2"
        android:layout_alignRight="@+id/minus1"
        android:layout_alignEnd="@+id/minus1"
        android:onClick="subtract2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL"
        android:id="@+id/total"
        android:layout_below="@+id/text3"
        android:layout_centerHorizontal="true"
        android:onClick="sum" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="合計を表示"
        android:id="@+id/text3"
        android:layout_below="@+id/add2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />
</RelativeLayout>
